{
    "name": "ministryofjustice/opg-refunds-logger",
    "description": "Common logging component for OPG Refunds",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0",
        "aws/aws-sdk-php": "^3.3",
        "zendframework/zend-log": "^2.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Opg\\Refunds\\Log\\": "src/Opg/Refunds/Log/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpgTest\\Refunds\\Log\\": "test/Opg/Refunds/Log/"
        }
    }
}
